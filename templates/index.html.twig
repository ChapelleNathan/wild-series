{% extends "base.html.twig" %}
{% block title %}Wild Series - Accueil{% endblock %}
{% block body %}
<main class="container">
    <div class="row mt-5">
        {% if app.user %}
        <h2>Bonjour {{ app.user.pseudo }} !</h2>
        {% else %}
        <p>Pas de compte ? <a href="{{ path('app_register') }}">Je m'inscris</a></p>
        {% endif %}
    </div>
    <section class="lastReleases my-5">
        <h2>Voici les dernières sorties :</h2>
        <div class="row">
            {% for lastRelease in lastReleases %}
            <div class="col">
                <div class="card" style="width: 25rem;">
                    <img src="{{ lastRelease.poster }}" class="card-img-top" alt="{{ lastRelease.title }} poster">
                    <div class="card-body">
                        <h3 class="card-title">{{ lastRelease.title }}<h3>
                                <p class="card-text fs-6">{{ lastRelease.summary|u.truncate(300,'...') }}</p>
                                <a href="{{ path('program_show', {slug : lastRelease.slug}) }}"
                                    class="btn btn-primary">Détails</a>
                    </div>
                </div>
            </div>
            {% endfor %}
        </div>
    </section>
</main>
{% endblock %}