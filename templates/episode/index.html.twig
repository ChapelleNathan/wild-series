{% extends 'base.html.twig' %}

{% block title %} {{ parent() }} - {{ 'episode'|trans }} index{% endblock %}

{% block body %}
    <h1>{{ 'episode'|trans }} index</h1>
    {% for category, messages in app.flashes %}
    {% for message in messages %}
        <div class="alert alert-{{ category }} alert-dismissible fade show" role="alert">
            {{ message }}
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    {% endfor %}
{% endfor %}
    <table class="table">
        <thead>
            <tr>
                <th>{{ 'title'|trans }}</th>
                <th>{{ 'number'|trans }}</th>
                <th>{{ 'summary'|trans }}</th>
                <th>{{ 'action'|trans }}</th>
            </tr>
        </thead>
        <tbody>
        {% for episode in episodes %}
            <tr>
                <td>{{ episode.title }}</td>
                <td>{{ episode.number }}</td>
                <td>{{ episode.synopsis }}</td>
                <td>
                    <a class="btn btn-primary" href="{{ path('episode_show', {'slug': episode.slug}) }}">{{ 'details'|trans }}</a>
                    <a class="btn btn-secondary" href="{{ path('episode_edit', {'slug': episode.slug}) }}">{{ 'edit'|trans }}</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">{{ 'noEpisode'|trans }}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a class="btn btn-secondary" href="{{ path('episode_new') }}">{{ 'add'|trans }}</a>
{% endblock %}
