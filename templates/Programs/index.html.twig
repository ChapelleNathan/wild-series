{% extends "base.html.twig" %}
{% block title %}All Programs{% endblock %}
{% block body %}
<h2>Toutes les Séries de la table Programs</h2>
{% for program in programs %}
<div>
    <h3>{{ loop.index }} / {{ program.title }} - Catégorie : {{ program.category.name }}</h3>
    <p>{{ program.summary }}</p>
    <a href="{{ path('program_show', {id : program.id}) }}">Voir la fiche</a>
</div>
{% else %}
Aucune série trouvé
{% endfor %}
<a class="btn btn-primary" href="{{ path('program_new') }}">Ajouter un nouveau programme</a>
<br><a href="{{ path('app_index') }}">Retour a l'acceuil</a>
{% endblock %}