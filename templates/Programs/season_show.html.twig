{% extends "base.html.twig" %}
{% block title %}
{{ season.program.title }} - {{'season'|trans}} {{ season.number }}
{% endblock %}
{% block body %}
<h2>{% trans with {'%seasonNumber%': season.number, '%program%': season.program.title} %} season_of {% endtrans %}</h2>
<p>{{'publication'|trans}} : {{ season.year }}</p>
<p>{{ 'description'|trans }} : {{ season.description }}</p>
<h3>{{ 'episode'|trans }} :</h3>
<ul>
    {% for episode in season.episodes %}
    <li><a href="{{ path('program_episode_show', 
        {
            programSlug: season.program.slug,
            season: season.id,
            episodeId: episode.id
        }) 
    }}">Episode {{ episode.number }} : <span class="fst-italic">{{ episode.title }}</span></a></li>
    {% endfor %}
</ul>

<a class="btn btn-secondary" href="{{ path('program_show', {slug: season.program.slug}) }}">{{ 'back'|trans }}</a>
{% endblock %}