{% extends "base.html.twig" %}
{% block title %}
{{ season.program.title }} - Saison {{ season.number }}
{% endblock %}
{% block body %}
<h2>Saison {{ season.number }} de <span class="fst-italic">"{{ season.program.title }}"</span></h2>
<p>Ann√©e de publication : {{ season.year }}</p>
<p>Description : {{ season.description }}</p>
<h3>Liste des episodes :</h3>
<ul>
    {% for episode in season.episodes %}
    <li><a href="{{ path('program_episode_show', 
        {
            program: season.program.id,
            season: season.id,
            episode: episode.id
        }) 
    }}">Episode {{ episode.number }} : <span class="fst-italic">{{ episode.title }}</span></a></li>
    {% endfor %}
</ul>

<a href="{{ path('program_show', {id: season.program.id}) }}">{{ season.program.title }}</a>
{% endblock %}