{% extends "index.html.twig" %}
{% block title %}
Série #{{ program.id }}
{% endblock %}
{% block stylesheets %}
{{ encore_entry_link_tags('program_show') }}
{% endblock %}
{% block body %}
<div class="container">
    {% for category, messages in app.flashes %}
    {% for message in messages %}
    <div class="alert alert-{{ category }} alert-dismissible fade show" role="alert">
        {{ message }}
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
    {% endfor %}
    {% endfor %}
    <div class="row my-3 mt-5">
        <div class="col">
            <img src="{{ program.poster }}" alt="{{ program.title }} poster" class="align-self-start mr-3 rounded-1">
        </div>
    </div>
    <div class="row my-3">
        <div class="card my-3">
            <div class="card-body">
                <div class="row">
                    <div class="col-11">
                        <h2 class="card-title">{{ program.title }}</h2>
                    </div>
                    <div class="col-1">
                        <a href="{{ path('program_addToWatchlist', {id: program.id}) }}">
                            <i class="{{ app.user.isInWatchlist(program) ? 'bi bi-star-fill' : 'bi bi-star' }}"></i>
                        </a>
                    </div>
                </div>
                <h3 class="card-subtitle mb-2 text-muted fs-5">Catégorie : {{ program.category.name }}</h3>
                <p class="card-text">{{ program.summary }}</p>
            </div>
        </div>
    </div>
    <div class="row p-0">
        <h3>Acteurs :</h3>
    </div>
    <div class="row my-3">
        {% for actor in program.actors %}
        <div class="col-3">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">{{ actor.name }}</h4>
                </div>
            </div>
        </div>
        {% else %}
        <li>
            <p>Pas d'acteur pour cette série</p>
        </li>
        {% endfor %}
    </div>
    <div class="row p-0">
        <h3>Saisons :</h3>
    </div>
    <div class="row my-3">
        <div class="btn-group" role="group" aria-label="Basic example">
            {% for season in program.seasons %}
            <a class="btn btn-primary"
                href="{{ path('program_season_show', {programSlug: program.slug, season: season.id} )}}">{{
                season.number}}</a>
            {% else %}
            <p>Pas de saison pour le moment</p>
            {% endfor %}
        </div>
    </div>
    {% if is_granted("ROLE_ADMIN") or program.owner == app.user %}
    <div class="row my-5 mt-4">
        <div class="col-3">
            <a class="btn btn-danger" href="{{ path('program_edit', {slug: program.slug}) }}">Éditer</a>
        </div>
    </div>
    {% endif %}
    <div class="row my-5 mt-4">
        <div class="col-3">
            <a class="btn btn-secondary" href="{{ path('program_index') }}"><svg xmlns="http://www.w3.org/2000/svg"
                    width="16" height="16" fill="currentColor" class="bi bi-arrow-left-square me-2" viewBox="0 0 16 16">
                    <path fill-rule="evenodd"
                        d="M15 2a1 1 0 0 0-1-1H2a1 1 0 0 0-1 1v12a1 1 0 0 0 1 1h12a1 1 0 0 0 1-1V2zM0 2a2 2 0 0 1 2-2h12a2 2 0 0 1 2 2v12a2 2 0 0 1-2 2H2a2 2 0 0 1-2-2V2zm11.5 5.5a.5.5 0 0 1 0 1H5.707l2.147 2.146a.5.5 0 0 1-.708.708l-3-3a.5.5 0 0 1 0-.708l3-3a.5.5 0 1 1 .708.708L5.707 7.5H11.5z" />
                </svg>liste des programmes</a>
        </div>
    </div>
</div>
{% endblock %}