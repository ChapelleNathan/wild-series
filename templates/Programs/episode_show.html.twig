{% extends "base.html.twig" %}
{% block title %}
{{ episode.season.program.title }} - S{{ episode.season.id }} - E{{ episode.number }}
{% endblock %}
{% block body %}
<h2><span class="fst-italic">{{ episode.season.program.title }}</span></h2>
<h3>Saison {{ episode.season.id }} - Episode {{ episode.title }}</h3>
<h4>Résumé :</h4>
<p>{{ episode.synopsis }}</p>
<br>
<a href="{{ path('program_season_show', 
{
    program: episode.season.program.id,
    season: episode.season.id
})
}}">Retour a la Saison {{ episode.season.id }}</a>
{% endblock %}