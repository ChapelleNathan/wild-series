{% extends "base.html.twig" %}
{% block title %}
{{ episode.season.program.title }} - S{{ episode.season.number }} - E{{ episode.number }}
{% endblock %}
{% block body %}
<main class="container">
    <h2><span class="fst-italic">{{ episode.season.program.title }}</span></h2>
    <h3>Saison {{ episode.season.number }} - Episode {{ episode.number }} : <span class="fst-italic">{{ episode.title
            }}</span></h3>
    <h4>Résumé :</h4>
    <p>{{ episode.synopsis }}</p>
    <br>
    <div class="row mb-4">
        <div class="col-2">
            <a class="btn btn-primary" href="{{ path('program_season_show', 
            {
                programSlug: episode.season.program.slug,
                season: episode.season.id
            })
            }}">Retour a la Saison {{ episode.season.number }}</a>
        </div>
    </div>
    <h4>Commentaires :</h4>
    <div class="row my-3">
        <div class="col-2">
            {% if app.user %}
            <p>Ajouter un commentaire</p>
            {{ form_start(form) }}
            {{ form_widget(form) }}
            <button class="btn btn-secondary">Ajouter</button>
            {{ form_end(form) }}
            {% endif %}
        </div>
    </div>
    <div class="row">
        <div class="col-6">
            {% for comment in episode.comments|reverse %}
            <div class="card my-3">
                <div class="card-header">
                    {{ comment.user.pseudo }}
                </div>
                <div class="card-body">
                    <p class="card-text p-card">{{ comment.comment }}</p>
                </div>
            </div>
            {% endfor %}
        </div>
    </div>
</main>

{% endblock %}