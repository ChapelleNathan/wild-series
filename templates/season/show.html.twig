{% extends 'base.html.twig' %}

{% block title %}Season{% endblock %}

{% block body %}
    <h1>Season</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>{{ 'number'|trans }}</th>
                <td>{{ season.number }}</td>
            </tr>
            <tr>
                <th>{{ 'year'|trans }}</th>
                <td>{{ season.year }}</td>
            </tr>
            <tr>
                <th>{{ 'description'|trans }}</th>
                <td>{{ season.description }}</td>
            </tr>
        </tbody>
    </table>

    <a class="btn btn-primary" href="{{ path('season_index') }}">{{ 'back'|trans }}</a>

    <a class="btn btn-secondary" href="{{ path('season_edit', {'id': season.id}) }}">{{ 'edit'|trans }}</a>

    {{ include('season/_delete_form.html.twig') }}
{% endblock %}
