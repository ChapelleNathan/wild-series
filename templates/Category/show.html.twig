{% extends "base.html.twig" %}
{% block title %}
Catégorie - {{ category }}
{% endblock %}
{% block body %}
{% for program in programs %}
<div>
    <h3>{{ loop.index }} / {{ program.title }} - Catégorie : {{ program.category.name }}</h3>
    <p>{{ program.summary }}</p>
    <a href="{{ path('program_show', {id : program.id}) }}">Voir la fiche</a>
</div>
{% else %}
Aucune série trouvé
{% endfor %}

<a href="{{ path('category_index') }}">Retour à la liste de la catégorie</a>
{% endblock %}